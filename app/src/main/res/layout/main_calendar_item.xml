<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAT"
        android:id="@+id/txt_calendar_week"
        android:textColor="#404040"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:typeface="sans" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_calendar_week"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/layout_cal_day">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cal_today_bg"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_calandar_today" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:id="@+id/txt_calendar_day"
            android:textColor="#404040"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:typeface="sans" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cal_todo_bg"
            android:background="@drawable/ic_calandar_dot_white"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:id="@+id/txt_cal_fulldate_hidden"
            android:textColor="#404040"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:typeface="sans" />

    </RelativeLayout>

</RelativeLayout>
